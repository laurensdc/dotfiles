{
  "workbench.tips.enabled": false,
  "workbench.startupEditor": "newUntitledFile",
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "security.workspace.trust.untrustedFiles": "open",
  "typescript.tsserver.maxTsServerMemory": 8192,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  // Code format
  "files.eol": "\n",
  "eslint.format.enable": true,
  // Theme & icon settings
  "workbench.iconTheme": "material-icon-theme",
  "oneDarkPro.vivid": false,
  "oneDarkPro.editorTheme": "One Dark Pro Darker",
  "material-icon-theme.folders.theme": "specific",
  // Editor settings
  "editor.lineNumbers": "relative",
  "editor.hover.delay": 100,
  "editor.tabSize": 2,
  "editor.lineHeight": 0,
  "editor.matchBrackets": "always",
  "editor.bracketPairColorization.enabled": false,
  "editor.suggestSelection": "recentlyUsedByPrefix",
  "editor.wordWrap": "on",
  "editor.cursorBlinking": "smooth",
  "editor.fontLigatures": true,
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": false
  },
  "editor.minimap.size": "fill",
  "editor.minimap.enabled": false,
  "editor.linkedEditing": true,
  "editor.formatOnSave": true,
  // Git
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.mergeEditor": true,
  "git.ignoredRepositories": [
    "/home/laurens/.vscode/extensions/stepsize.stepsize-0.67.0/resources/demo-repository"
  ],
  // Language settings
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
  },
  "[elm]": {
    "editor.tabSize": 4,
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[prisma]": {
    "editor.formatOnSave": false
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    },
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  },
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "files.associations": {
    "*.twig": "html",
    "*.blade.php": "html"
  },
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "blade": "html"
  },
  // Security & telemetry
  "editor.accessibilitySupport": "off",
  "extensions.ignoreRecommendations": true,
  "typescript.surveys.enabled": false,
  "typescript.disableAutomaticTypeAcquisition": true,
  "update.mode": "start",
  "workbench.settings.enableNaturalLanguageSearch": false,
  "workbench.enableExperiments": false,
  "telemetry.telemetryLevel": "off",
  "json.schemas": [
    {
      "fileMatch": [
        "/bower.json",
        "/.bower.json"
      ],
      "url": "http://json.schemastore.org/bower"
    },
    {
      "fileMatch": [
        "/package.json"
      ],
      "url": "http://json.schemastore.org/package"
    },
    {
      "fileMatch": [
        "/project.json"
      ],
      "url": "http://json.schemastore.org/project"
    },
    {
      "fileMatch": [
        "*.schema.json"
      ],
      "url": "http://json-schema.org/draft-04/schema#"
    },
    {
      "fileMatch": [
        "/global.json"
      ],
      "url": "http://json.schemastore.org/global"
    },
    {
      "fileMatch": [
        "/ticino.plugin.json"
      ],
      "url": "http://opentools.azurewebsites.net/ticino.plugin.json"
    },
    {
      "fileMatch": [
        "/tsconfig.json"
      ],
      "url": "http://json.schemastore.org/tsconfig"
    },
    {
      "fileMatch": [
        "/jsconfig.json"
      ],
      "url": "http://opentools.azurewebsites.net/jsconfig"
    },
    {
      "fileMatch": [
        "/.bowerrc"
      ],
      "url": "http://json.schemastore.org/bowerrc"
    },
    {
      "fileMatch": [
        "/.jshintrc"
      ],
      "url": "http://json.schemastore.org/jshintrc"
    },
    {
      "fileMatch": [
        "/.jscsrc"
      ],
      "url": "http://json.schemastore.org/jscsrc"
    },
    {
      "fileMatch": [
        "/config/default.json",
        "/config/development.json",
        "/config/production.json"
      ],
      "url": "schemastore/config.json"
    },
    {
      "fileMatch": [
        "/esbuildconfig.json"
      ],
      "url": "./packages/id-tools-build/id-build-tools/src/es-build/esbuildconfig-schema.json"
    }
  ],
  // Terminal
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.external.windowsExec": "c:\\windows\\system32\\wsl.exe",
  "terminal.integrated.defaultProfile.windows": "Ubuntu (WSL)",
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": [],
      "icon": "terminal-cmd"
    },
    "Git Bash": {
      "source": "Git Bash"
    },
    "C:\\Program Files\\Git\\bin\\bash.exe (migrated)": {
      "path": "C:\\Program Files\\Git\\bin\\bash.exe",
      "args": []
    },
    "Ubuntu (WSL)": {
      "path": "C:\\Windows\\System32\\wsl.exe",
      "args": [
        "-d",
        "Ubuntu"
      ]
    }
  },
  // Extensions
  "codemetrics.basics.CodeLensEnabled": false,
  // VSCode-neovim
  "vscode-neovim.neovimExecutablePaths.win32": "C:\\Program Files\\Neovim\\bin\\nvim.exe",
  "vscode-neovim.neovimExecutablePaths.linux": "/usr/local/bin/nvim",
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  // Other
  "settingsSync.keybindingsPerPlatform": false,
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.external.osxExec": "Warp.app",
  "keyboard.dispatch": "keyCode",
  "git.autofetch": true,
  "editor.fontFamily": "'Comic Code Ligatures', 'Fira Code', Consolas, 'Courier New', monospace",
  "editor.codeLensFontFamily": "'Comic Code Ligatures'",
  "markdown.preview.fontFamily": "'Iosevka Aile', -apple-system, BlinkMacSystemFont, 'Segoe WPC', 'Segoe UI', system-ui, 'Ubuntu', 'Droid Sans', sans-serif",
  "breadcrumbs.symbolPath": "last",
  "vscode-neovim.neovimExecutablePaths.darwin": "/opt/homebrew/bin/nvim",
  "workbench.editor.empty.hint": "hidden",
  "security.workspace.trust.enabled": false,
  "window.commandCenter": false,
  "editor.glyphMargin": true,
  "explorer.autoReveal": true,
  "cSpell.language": "nl,en-GB",
  "security.promptForLocalFileProtocolHandling": false,
  "cSpell.userWords": [
    "anymore",
    "Bonnencel",
    "colruyt",
    "Colruyt",
    "coupongroup",
    "datocms",
    "Enseignes",
    "fastify",
    "pino",
    "postgres",
    "Rijssel",
    "typebox",
    "typeorm",
    "Typeorm",
    "XTRA"
  ],
  "codemetrics.basics.ComplexityLevelHigh": 15,
  "codemetrics.basics.ComplexityLevelNormal": 7,
  "codemetrics.basics.FileSizeLimitMB": 2,
  "codemetrics.basics.ComplexityLevelExtremeDescription": "Bro...",
  "codemetrics.basics.OverviewRulerModeEnabled": false,
  "vscode-neovim.compositeKeys": {
    "jl": {
      "command": "vscode-neovim.escape"
    }
  },
  "workbench.colorTheme": "Sunbather Dark",
  "codeium.enableCodeLens": false,
  "vscode-neovim.statusLineSeparator": " | ",
  "debug.javascript.autoAttachFilter": "disabled",
  "diffEditor.renderGutterMenu": false,
  // Vim plugin
  "vim.showMarksInGutter": true,
  "vim.foldfix": true,
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.duration": 100,
  "vim.useSystemClipboard": true,
  "vim.handleKeys": {
    "<C-d>": true,
    "<C-s>": false,
    "<C-z>": false
  },
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "g",
        "r"
      ],
      "commands": [
        "editor.action.goToReferences",
      ]
    },
    {
      "before": [
        "g",
        "I"
      ],
      "commands": [
        "editor.action.goToImplementation"
      ]
    },
    {
      "before": [
        "K"
      ],
      "commands": [
        // "editor.action.showHover"
        "editor.action.showDefinitionPreviewHover",
      ],
    }
  ],
  "github.copilot.enable": {
    "*": false,
  },
  "chat.agent.enabled": true,
  "github.copilot.editor.enableCodeActions": false,
  "chat.commandCenter.enabled": false,
  "terminal.integrated.fontFamily": "'FiraCode Nerd Font Mono'",
  "workbench.layoutControl.enabled": false,
  "editor.guides.indentation": false,
  "scm.diffDecorationsGutterPattern": {
    "added": true
  },
  "zenMode.hideLineNumbers": false,
  "zenMode.showTabs": "none",
  "workbench.editor.showTabs": "none",
  "git.blame.editorDecoration.enabled": false,
  "vscode-neovim.neovimClean": true,
  "vscode-neovim.afterInitConfig": [
    "nnoremap <silent> gI <Cmd>call VSCodeNotify('editor.action.goToImplementation')<CR>",
    "nnoremap <silent> gr <Cmd>call VSCodeNotify('editor.action.goToReferences')<CR>",
    "set ignorecase",
    "set clipboard=unnamedplus",
    "set smartcase"
  ],
  "workbench.activityBar.location": "hidden",
}